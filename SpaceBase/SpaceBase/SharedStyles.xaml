<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sb="clr-namespace:SpaceBase">
    <sb:NullVisibilityConverter x:Key="NullVisibilityConverter"/>
    <sb:CollapsedIfEqualIntegerConverter x:Key="CollapsedIfEqualIntegerConverter"/>
    <sb:ActionTypeBackgroundConverter x:Key="ActionTypeBackgroundConverter"/>
    <sb:CostVisibilityConverter x:Key="CostVisibilityConverter"/>
    <sb:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
    <sb:IDToPlayerTextConverter x:Key="IDToPlayerTextConverter"/>
    <sb:IDToPlayerTurnTextConverter x:Key="IDToPlayerTurnTextConverter"/>
    <sb:DiceToTextConverter x:Key="DiceToTextConverter"/>

    <Style x:Key="BubbleBorderStyle" TargetType="Border">
        <Setter Property="Height" Value="{x:Static sb:Constants.CostSectorBubbleWidthHeight}"/>
        <Setter Property="Width" Value="{x:Static sb:Constants.CostSectorBubbleWidthHeight}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="45"/>
        <Setter Property="BorderBrush" Value="Black"/>
    </Style>

    <Style x:Key="CardGridBackgroundStyle" TargetType="Grid">
        <Setter Property="Background" Value="RosyBrown"/>
    </Style>
</ResourceDictionary>