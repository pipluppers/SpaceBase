<UserControl x:Class="SpaceBase.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceBase"
             xmlns:models="clr-namespace:SpaceBase.Models"
             d:DataContext="{d:DesignInstance Type=models:Card}"
             mc:Ignorable="d"
             x:Name="CardUserControl"
             d:DesignHeight="250" d:DesignWidth="{x:Static local:Constants.CardWidth}">
    <Grid AllowDrop="False">
        <Grid.Resources>
            <local:CostVisibilityConverter x:Key="CostVisibilityConverter"/>
            <local:ActionTypeBackgroundConverter x:Key="ActionTypeBackgroundConverter"/>
        </Grid.Resources>

        <Border Panel.ZIndex="2" AllowDrop="True" IsHitTestVisible="True" Drop="Border_Drop">
            <Grid Background="RosyBrown">
                <Grid.Resources>
                    <Style x:Key="DecorationBorder" TargetType="Border">
                        <Setter Property="Height" Value="{x:Static local:Constants.CostSectorBubbleWidthHeight}"/>
                        <Setter Property="Width" Value="{x:Static local:Constants.CostSectorBubbleWidthHeight}"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                    <Style x:Key="BubbleBorder" TargetType="Border" BasedOn="{StaticResource DecorationBorder}">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="CornerRadius" Value="45"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border CornerRadius="45" Height="{x:Static local:Constants.CostSectorBubbleWidthHeight}" Width="{x:Static local:Constants.CostSectorBubbleWidthHeight}" Background="Yellow" HorizontalAlignment="Left" Margin="5,5,0,0" Visibility="{Binding Cost, Converter={StaticResource CostVisibilityConverter}, Mode=OneWay}">
                    <TextBlock Text="{Binding Cost}"/>
                </Border>
                <Border Style="{StaticResource DecorationBorder}" HorizontalAlignment="Right" Background="Silver" Margin="0,5,5,0">
                    <TextBlock Text="{Binding SectorID}"/>
                </Border>

                <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5,10,5,5" Background="DeepSkyBlue">
                    <Border Style="{StaticResource BubbleBorder}" Background="{Binding Effect, Converter={StaticResource ActionTypeBackgroundConverter}, Mode=OneWay}">
                        <TextBlock Text="{Binding Amount}"/>
                    </Border>
                </Border>
                <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="5,5,5,10" Background="Red">
                    <Border Style="{StaticResource BubbleBorder}" Background="{Binding DeployedEffect, Converter={StaticResource ActionTypeBackgroundConverter}, Mode=OneWay}">
                        <TextBlock Text="{Binding DeployedAmount}"/>
                    </Border>
                </Border>
            </Grid>
        </Border>
        <Rectangle Panel.ZIndex="1" Height="{x:Static local:Constants.CardHeight}" Width="{x:Static local:Constants.CardWidth}" Stroke="Black" StrokeThickness="1" Fill="Transparent"
                           AllowDrop="True" DragOver="SectorRectangle_DragOver" Drop="SectorRectangle_Drop"/>
    </Grid>
</UserControl>
