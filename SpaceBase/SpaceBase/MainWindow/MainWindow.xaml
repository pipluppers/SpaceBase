<Window x:Class="SpaceBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceBase"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Hello"/>

        <Grid Grid.Row="1" HorizontalAlignment="Center" Height="154" Margin="30,10,30,0" VerticalAlignment="Top">
            <Grid.Resources>
                <Style TargetType="ColumnDefinition">
                    <Setter Property="Width" Value="60"/>
                </Style>
                <Style TargetType="{x:Type Rectangle}">
                    <Setter Property="Stroke" Value="Black"/>
                    <Setter Property="Margin" Value="0,0,20,0"/>
                </Style>
                <Style TargetType="{x:Type Ellipse}">
                    <Setter Property="Stroke" Value="Black"/>
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Margin" Value="-20,5,0,0"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="0">
                
            </Rectangle>
            <Rectangle Grid.Row="0" Grid.Column="1"/>
            <Rectangle Grid.Row="0" Grid.Column="2"/>
            <Rectangle Grid.Row="0" Grid.Column="3"/>
            <Rectangle Grid.Row="0" Grid.Column="4"/>
            <Rectangle Grid.Row="0" Grid.Column="5"/>
            <Rectangle Grid.Row="0" Grid.Column="6"/>
            <Rectangle Grid.Row="0" Grid.Column="7"/>
            <Rectangle Grid.Row="0" Grid.Column="8"/>
            <Rectangle Grid.Row="0" Grid.Column="9"/>
            <Rectangle Grid.Row="0" Grid.Column="10"/>
            <Rectangle Grid.Row="0" Grid.Column="11"/>

            <Ellipse Grid.Row="1" Grid.Column="0"/>
            <Ellipse Grid.Row="1" Grid.Column="1"/>
        </Grid>

        <ItemsControl Grid.Row="2" ItemsSource="{Binding Player.Board.Sectors}">
            <ItemsControl.Template>
                <ControlTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="2"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <Rectangle HorizontalAlignment="Center" Height="254" Margin="0,170,0,0" Grid.RowSpan="2" Stroke="Black" VerticalAlignment="Top" Width="800"/>
