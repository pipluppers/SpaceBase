<UserControl x:Class="SpaceBase.DiceSectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceBase"
             mc:Ignorable="d" 
             d:DesignHeight="125" MaxHeight="125" MinHeight="125"
             d:DesignWidth="120" MaxWidth="120" MinWidth="120"
             IsVisibleChanged="DiceSectorControl_IsVisibleChanged">
    <Grid>
        <Grid.Resources>
            <local:SectorTextConverter x:Key="SectorTextConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="100" Width="100" Background="LightBlue">
            
        </Border>
        <TextBlock x:Name="SectorTextBlock" Grid.Row="1" Margin="0,5,0,0" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
