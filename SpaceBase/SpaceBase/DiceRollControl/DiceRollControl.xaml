<UserControl x:Class="SpaceBase.DiceRollControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceBase"
             d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#90EE90">
        <Grid.Resources>
            <Style x:Key="ChoiceStyle" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,10,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
            <Style x:Key="ClickableGrid" TargetType="Grid">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="IsHitTestVisible" Value="True"/>
                <EventSetter Event="MouseLeftButtonDown" Handler="Grid_MouseLeftButtonDown"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                        <Setter Property="Background" Value="#90EE80"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="IndividualGrid" Grid.Row="1" Grid.Column="0" Style="{StaticResource ClickableGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Individual" Style="{StaticResource ChoiceStyle}"/>
            <local:DiceSectorControl Grid.Row="1" Grid.Column="0" IsHumanPlayerActive="{Binding IsHumanPlayerActive}" Dice1Value="{Binding Dice1, Mode=TwoWay}"/>
            <local:DiceSectorControl Grid.Row="1" Grid.Column="1" IsHumanPlayerActive="{Binding IsHumanPlayerActive}" Dice1Value="{Binding Dice2, Mode=TwoWay}"/>
        </Grid>

        <!-- Separator -->
        <Border Grid.Column="2" Grid.RowSpan="2" BorderThickness="1,0,0,0" BorderBrush="Gray"/>

        <Grid x:Name="SumGrid" Grid.Column="1" Style="{StaticResource ClickableGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Sum" Style="{StaticResource ChoiceStyle}"/>
            <local:DiceSectorControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" IsHumanPlayerActive="{Binding IsHumanPlayerActive}" Dice1Value="{Binding Dice1}" Dice2Value="{Binding Dice2}"/>

            <Button Grid.Row="0" Grid.Column="1" Content="Hello" Margin="0,10,10,0" Command="{Binding ShowMainWindowCommand}">
                
            </Button>
        </Grid>
    </Grid>
</UserControl>
