<UserControl x:Class="SpaceBaseApplication.CardEffectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceBaseApplication"
             xmlns:models="clr-namespace:SpaceBase.Models"
             d:DataContext="{d:DesignInstance Type=models:Card}"
             mc:Ignorable="d"
             d:DesignHeight="{x:Static local:Constants.CostSectorBubbleWidthHeight}"
             d:DesignWidth="{x:Static local:Constants.CostSectorBubbleWidthHeight}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Border x:Name="PrimaryBorder" Style="{StaticResource BubbleBorderStyle}">
            <TextBlock x:Name="PrimaryTextBlock" HorizontalAlignment="Center"/>
        </Border>
        <Border x:Name="SecondaryBorder" Style="{StaticResource BubbleBorderStyle}" Margin="3,0,0,0">
            <TextBlock x:Name="SecondaryTextBlock" HorizontalAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>
